<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

        <TextView
                android:id="@+id/user_id"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:text="id : 0" />

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

            <TextView
                    android:id="@+id/user_account"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:layout_toRightOf="@+id/user_username"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="account : 1100"
                    android:textSize="20sp" />

            <TextView
                    android:id="@+id/user_username"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_marginRight="30dp"
                    android:gravity="center_vertical"
                    android:text="username : wcf"
                    android:textSize="20sp" />

        </RelativeLayout>

        <TextView
                android:id="@+id/user_priority"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="5dp"
                android:textSize="18sp"
                android:text="priority : 0" />

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="5dp" >

            <TextView
                    android:id="@+id/user_lastchecktime"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:padding="0dp"
                    android:gravity="center_vertical"
                    android:text="lastchecktime : 1970-01-01 08:00"
                    android:textSize="16sp" />

            <ImageButton
                    android:id="@+id/user_btn_show_detail"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:padding="0dp"
                    android:scaleType="fitXY"
                    android:background="#00000000"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/turn_down"
                    android:textSize="12sp" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/user_linear_show_detail"
            android:orientation="vertical"
            android:layout_height="300dp"
            android:layout_width="match_parent"
            android:visibility="visible" >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_margin="10dp"
                android:text="更多信息：" />

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >



        </RelativeLayout>


    </LinearLayout>

</LinearLayout>
